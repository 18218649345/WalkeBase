<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/shop_car_RelativeLayout"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="#d213b3fd">
        <LinearLayout
            android:id="@+id/shop_car_LinearLayout"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/shop_car_iv1"
                android:layout_width="200dp"
                android:layout_height="400dp"
                android:src="@mipmap/ic_launcher"/>
            <Button
                android:id="@+id/shop_car_bt1"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:text="right_hide"/>
            <Button
                android:id="@+id/shop_car_bt2"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:text="rightShow"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_toRightOf="@id/shop_car_LinearLayout"
            android:layout_marginLeft="30dp">

            <ImageView
                android:id="@+id/shop_car_iv2"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@mipmap/scan_buy_2x108"/>
            <ImageView
                android:id="@+id/shop_car_iv3"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@mipmap/ic_launcher_round"
                android:layout_marginTop="20dp"/>

            <ImageView
                android:id="@+id/shop_car_iv4"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@mipmap/scan_buy_2x108"
                android:layout_marginTop="20dp"/>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/shop_car_rightLayout"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="#5fefcb4a"
        android:orientation="vertical">
        <TextView
            android:id="@+id/shop_car_tv1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="text1"
            android:textSize="36sp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/frame_conners_orgine"/>
        <TextView
            android:id="@+id/shop_car_tv2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="text2"
            android:textSize="36sp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/frame_conners_orgine"/>
        <TextView
            android:id="@+id/shop_car_tv3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="text3"
            android:textSize="36sp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/frame_conners_orgine"/>
    </LinearLayout>


</RelativeLayout>