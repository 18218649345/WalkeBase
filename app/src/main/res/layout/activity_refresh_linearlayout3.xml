<?xml version="1.0" encoding="utf-8"?>
<com.hui.huiheight.views.refresh.linearlayout.ScrollLinearLayout3 xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <com.hui.huiheight.views.refresh.linearlayout.CustomLinearLayout3
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="RefreshLinearLayoutActivity3"
            android:background="#a1fdf29d"
            android:onClick="toasting"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="click"
            android:text="Click"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/jesssica1"/>

    </com.hui.huiheight.views.refresh.linearlayout.CustomLinearLayout3>

</com.hui.huiheight.views.refresh.linearlayout.ScrollLinearLayout3>