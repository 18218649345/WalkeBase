<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <ImageView
        android:id="@+id/apj_iv"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/apj_tv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="123456"
        android:background="#bd78d96d"
        android:layout_toLeftOf="@id/apj_iv"/>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/apj_iv"
        android:orientation="horizontal">

        <Button
            android:id="@+id/apj_bt"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="123456"
            android:background="#bd979997"
            android:layout_toLeftOf="@id/apj_iv"/>

        <LinearLayout
            android:id="@+id/apj_LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/apj_iv"
            android:orientation="horizontal"
            android:background="#b9688bed">

            <Button
                android:id="@+id/apj_bt2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="456"
                android:background="#bd979997"
                android:layout_toLeftOf="@id/apj_iv"
                android:layout_gravity="center"/>


        </LinearLayout>


    </LinearLayout>



</RelativeLayout>