<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <walke.viewlibrary.luckypan.TurntableView
        android:id="@+id/alp_TurntableView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:imgTurntable="@mipmap/turntable_bg1"
        app:imgPointer="@mipmap/turntable_pointer1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/alp_btChange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="change"
            android:onClick="change"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="reset"
            android:onClick="reset"
            android:layout_marginLeft="6dp"/>
    </LinearLayout>
    <walke.viewlibrary.count_down.CountdownView
        android:id="@+id/alp_CountdownView"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="15dp"
         android:background="#bfbfbf"
        android:text="获取验证码"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>


</LinearLayout>